<body>
    <header>
        <h1>Best Books!</h1>
        <nav>
            <ul>

            </ul>
        </nav>
    </header>
    <main>
        <div id="searchHeader">
            <h2>Search By Title Or Author</h2>
        </div>
        <form action="/searches" method="POST">
            <fieldset>
                <input class="inputField" type="text" required placeholder="Enter a Title or Author" name="one"><br>
                <div class="radioDiv">
                    <label for="title">Title</label>
                    <input type="radio" value="intitle" id="title" name="one" checked><br>
                </div>
                <div class="radioDiv">

                    <label for="author">Author</label>
                    <input type="radio" value="inauthor" id="author" name="one"></div>
                <input class="inputField" type="submit" id="submit" value="Search The Google Books API">


            </fieldset>
        </form>
    </main>
